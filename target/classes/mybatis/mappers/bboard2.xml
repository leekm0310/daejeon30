<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="mapper.bboard2">
	<resultMap id="bboard2Result" type="bboard2VO">
	 <result property="num" column="num" />
	 <result property="title" column="title" />
	 <result property="content" column="content" />
	 <result property="id" column="id" />
	 <result property="date" column="date" />
	 <result property="views" column="views" />
	 <result property="imageFileName" column="imageFileName" />
	</resultMap>
	
	<select id="selectAllReview" resultMap="bboard2Result">
	<![CDATA[
		select * from reviewboard
	]]>	
	</select>
	
	<insert id="addreview" parameterType="bboard2Result">
	<![CDATA[
		insert into reviewboard(title, content, id, imageFileName)
		values(#{title}, #{content}, #{id}, #{imageFileName})
	]]>
	</insert>




</mapper>