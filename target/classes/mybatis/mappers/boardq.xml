<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="mapper.boardq">
	<resultMap id="boardqResult" type="boardqVO">
	 <result property="num" column="num" />
	 <result property="id" column="id" />
	 <result property="name" column="name" />
	 <result property="title" column="title" />
	 <result property="content" column="content" />
	 <result property="id" column="id" />
	 <result property="date" column="date" />
	 <result property="views" column="views" />
	 <result property="password" column="password" />
	  <result property="sort" column="sort" />
	</resultMap>
	
	<select id="selectAllqna" resultMap="boardqResult">
	<![CDATA[
		select * from qboard
	]]>
	</select>

	
	<insert id="addQna" parameterType="boardqVO">
	<![CDATA[
		insert into qboard(title, name, id, content, password, sort)
		values(#{title}, #{name}, #{id}, #{content}, #{password}, #{sort})
	]]>
	</insert>
	
</mapper>